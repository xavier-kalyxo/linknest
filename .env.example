# Database (Neon Serverless Postgres)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Auth.js
AUTH_SECRET= # Generate with: npx auth secret
AUTH_URL=http://localhost:3000

# Google OAuth (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (https://github.com/settings/developers)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Resend (https://resend.com — for magic link & verification emails)
RESEND_API_KEY=re_xxxxx
EMAIL_FROM="LinkNest <noreply@yourdomain.com>"

# Cloudflare R2 (https://dash.cloudflare.com → R2)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=linknest-assets
R2_PUBLIC_URL= # e.g. https://pub-xxx.r2.dev

# PostHog (https://posthog.com)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
POSTHOG_PERSONAL_API_KEY= # For server-side analytics queries (Settings → Personal API Keys)
POSTHOG_PROJECT_ID= # Numeric project ID from PostHog URL

# Stripe (https://dashboard.stripe.com)
STRIPE_SECRET_KEY= # sk_test_... or sk_live_...
STRIPE_WEBHOOK_SECRET= # whsec_... (from Stripe Dashboard → Webhooks)
STRIPE_PRICE_MONTHLY= # price_... (Pro monthly price ID)
STRIPE_PRICE_YEARLY= # price_... (Pro yearly price ID)

# Google Safe Browsing (https://console.cloud.google.com/apis/library/safebrowsing.googleapis.com)
GOOGLE_SAFE_BROWSING_API_KEY=

# Upstash Redis (https://console.upstash.com — for rate limiting)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Sentry (https://sentry.io)
NEXT_PUBLIC_SENTRY_DSN= # https://xxx@yyy.ingest.sentry.io/zzz
SENTRY_ORG= # Your Sentry org slug (for source map uploads)
SENTRY_PROJECT= # Your Sentry project slug
SENTRY_AUTH_TOKEN= # For source map uploads (optional — Settings → Auth Tokens)
